<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/heart_gradertion"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の気温"
        android:id="@+id/textView19"
        android:layout_gravity="center_horizontal"
        android:textSize="60dp"
        android:textColor="#d2ff007d"
        android:background="#61ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="春・寒め"
            android:id="@+id/button15"
            android:background="#d2e3aaff"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:text="涼しい"
            android:id="@+id/button16"
            android:background="#d2ff55cc"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:text="暖かい"
            android:id="@+id/button17"
            android:background="#d2ff4c8e"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="少し暑いかも"
            android:id="@+id/button18"
            android:background="#d2ff7166"
            android:textColor="#fff5f5f5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夏・過ごしやすい"
            android:id="@+id/button19"
            android:background="#d2ffbf0a"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:text="まだいける"
            android:id="@+id/button20"
            android:background="#d2ff9d15"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="暑い"
            android:id="@+id/button21"
            android:background="#d2ff5b3f"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="溶けそう"
            android:id="@+id/button22"
            android:background="#d2ff0011"
            android:textColor="#fff5f5f5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="秋・夏残ってる"
            android:id="@+id/button23"
            android:background="#d2b4ff00"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/button24"
            android:background="#d2cef348"
            android:text="快適"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="93dp"
            android:layout_height="wrap_content"
            android:text="肌寒い"
            android:id="@+id/button25"
            android:background="#d2bfdc11"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="冬じゃない？"
            android:id="@+id/button26"
            android:background="#d2d0ef00"
            android:textColor="#fff5f5f5" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="冬・いいひんやり感"
            android:id="@+id/button11"
            android:background="#ff73fbff"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="冬本番"
            android:id="@+id/button12"
            android:background="#d236f4ff"
            android:textColor="#fff5f5f5" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="89dp"
            android:layout_height="match_parent"
            android:text="結構寒い"
            android:id="@+id/button13"
            android:background="#d244bfff"
            android:textColor="#fff5f5f5" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="極寒"
            android:id="@+id/button14"
            android:background="#d20059ff"
            android:textColor="#fff5f5f5" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今日の天気"
        android:id="@+id/textView20"
        android:textColor="#d240ff07"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:background="#61ffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:weightSum="1">

        <Button
            android:layout_width="98dp"
            android:layout_height="102dp"
            android:text="cloudy"
            android:id="@+id/button27"
            android:background="@drawable/cloud"
            android:layout_weight="0.50"
            android:textSize="20dp"
            android:textColor="#d2777abd" />

        <Button
            android:layout_width="95dp"
            android:layout_height="102dp"
            android:text="sunny"
            android:id="@+id/button28"
            android:background="@drawable/sun_weather"
            android:layout_weight="0.79"
            android:textSize="20dp"
            android:textColor="#d2ff6500" />

        <Button
            android:layout_width="91dp"
            android:layout_height="98dp"
            android:text="snowy"
            android:id="@+id/button29"
            android:background="@drawable/snow_flake"
            android:textSize="20dp"
            android:textColor="#d28a8999" />

        <Button
            android:layout_width="93dp"
            android:layout_height="100dp"
            android:text="rainy"
            android:id="@+id/button30"
            android:background="@drawable/rain"
            android:textSize="20dp"
            android:textColor="#d200a3ff" />

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button8"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:onClick="click" />

</LinearLayout>